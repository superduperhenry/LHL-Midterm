<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create your quiz here!</title>
  <link rel="stylesheet" href="/styles/create_quiz.css">
  <script src="/vendor/jquery-3.0.0.js"></script>

</head>

<body>
  <nav>
    <ul>
      <li> <a href="/create-quiz"> Create Quiz </a> </li>
      <li> <a href="/prior-quiz-results"> Prior Quiz Results </a> </li>

    </ul>
  </nav>

  <div id="quiz-link"></div>

  <form class="create-quiz-form" id="create-quiz-form">
    <div class="quizInfo">
      <label for="quiz-name">Quiz Name:</label>
      <input id="quiz-name" name="quizName" type="text" required>

      <label for="quiz-description">Quiz Description:</label>
      <textarea id="quiz-description" name="quizDescription" required></textarea>
    </div>


    <div class="QuizVisibility">
      <label>Quiz Visibility:</label>
      <div class="publicPrivateButton">

        <label for="public">Public</label>
        <input id="public" type="radio" name="quizVisibility" value="public" checked>

        <label for="private">Private</label>
        <input id="private" type="radio" name="quizVisibility" value="private">
      </div>
    </div>


    <div class=questionBox>
      <label for="question">Question:</label>
      <textarea id="question" name="question1"></textarea>
    </div>

    <div class="answers">
      <label for="answer1">Answer 1:</label>
      <input id="answer1" name="answer1" type="text">

      <label for="answer2">Answer 2:</label>
      <input id="answer2" name="answer2" type="text">

      <label for="answer3">Answer 3:</label>
      <input id="answer3" name="answer3" type="text">

      <label for="answer4">Answer 4:</label>
      <input id="answer4" name="answer4" type="text">

      <label for="correct-answer">***Correct Answer***:</label>
      <select id="correct-answer" name="correct-answer">
        <option value=""> </option>
        <option value="answer1">Answer 1</option>
        <option value="answer2">Answer 2</option>
        <option value="answer3">Answer 3</option>
        <option value="answer4">Answer 4</option>
      </select>
    </div>

    <button id="add-question-btn" type="button">Add Question</button>

  </form>

  <div class="buttons">
    <button id="submit-quiz-btn" type="submit">Save Quiz</button>

  </div>

  <div id="oldQuestion"></div>





  <script defer src="/scripts/quiz.js"></script>
</body>

</html>